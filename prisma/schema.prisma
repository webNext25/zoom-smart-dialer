generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  password    String
  role        Role      @default(CUSTOMER)
  maxMinutes  Int       @default(100)
  usedMinutes Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  agents      Agent[]
  sessions    Session[]
  recordings  CallRecording[]
  
  @@index([email])
}

model Agent {
  id             String   @id @default(cuid())
  userId         String
  name           String
  provider       String
  modelProvider  String
  systemPrompt   String   @db.Text
  firstMessage   String
  voiceId        String
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  knowledgeBase  KnowledgeBase[]
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@index([userId])
  @@index([userId, createdAt])
}

model Voice {
  id                String   @id @default(cuid())
  name              String
  provider          String
  providerVoiceId   String
  isPublic          Boolean  @default(false)
  assignedTo        String[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([isPublic])
}

model KnowledgeBase {
  id          String   @id @default(cuid())
  agentId     String
  fileName    String
  fileUrl     String
  fileSize    Int
  fileType    String
  
  agent       Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  
  @@index([agentId])
}

model CallRecording {
  id          String   @id @default(cuid())
  userId      String
  phoneNumber String
  duration    Int
  sentiment   String
  transcript  String   @db.Text
  audioUrl    String?
  highlights  Json
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
  @@index([userId, sentiment])
  @@index([userId, createdAt])
}

model Template {
  id            String   @id @default(cuid())
  name          String
  description   String
  category      String
  provider      String   @default("vapi")
  modelProvider String   @default("openai")
  systemPrompt  String   @db.Text
  firstMessage  String
  isPublic      Boolean  @default(true)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([category])
  @@index([isPublic])
  @@index([category, isPublic])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  sessionToken String   @unique
  expires      DateTime
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  
  @@index([userId])
  @@index([sessionToken])
}

model SystemSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text // Encrypted value
  category  String   // "ai", "voice", "zoom", "upload"
  isPublic  Boolean  @default(false) // If true, exposed to client
  updatedAt DateTime @updatedAt
  updatedBy String?  // Admin user ID who last updated
  
  @@index([category])
  @@index([isPublic])
  @@map("system_settings")
}

enum Role {
  ADMIN
  CUSTOMER
}
